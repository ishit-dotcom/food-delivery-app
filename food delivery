        </section>

        <section id="menu">
            <h2>Menu</h2>
            <div id="menu-items">
                <!-- Menu items will be dynamically added here -->
            </div>
        </section>

        <section id="order">
            <h2>Your Order</h2>
            <div id="order-summary">
                <!-- Order summary will be dynamically added here -->
            </div>
            <button id="place-order">Place Order</button>
        </section>
    </main>

